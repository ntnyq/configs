{
  "name": "@ntnyq/configs",
  "version": "1.0.5",
  "private": true,
  "packageManager": "pnpm@7.13.5",
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "bumpp package.json packages/*/package.json && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "workspace:*",
    "bumpp": "^8.2.1",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "pnpm": "^7.13.5"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yaml}": "eslint --fix"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@ntnyq/eslint-config"
  }
}
