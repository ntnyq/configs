{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "schedule:weekly", "group:allNonMajor"],
  "git-submodules": {
    "automerge": true,
    "enabled": true
  },
  "ignoreDeps": ["node"],
  "ignorePaths": ["**/__tests__/**", "**/fixtures/**"],
  "ignorePresets": [":semanticPrefixFixDepsChoreOthers"],
  "labels": ["dependencies"],
  "minimumReleaseAge": "7 days",
  "packageRules": [
    {
      "addLabels": ["deps:actions"],
      "description": "Use the deps:actions label for github-action manager updates (this means Renovate's github-action manager).",
      "matchManagers": ["github-actions"]
    },
    {
      "addLabels": ["deps:npm"],
      "description": "Use the deps:npm label for npm manager packages (this means Renovate's npm manager).",
      "matchManagers": ["npm"]
    },
    {
      "description": "Disable Renovate for peer dependencies.",
      "enabled": false,
      "matchDepTypes": ["peerDependencies"]
    }
  ],
  "rangeStrategy": "bump"
}
